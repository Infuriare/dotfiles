#!/bin/sh

if [[ $(basename $PWD) == "Wallpapers" ]];
then
    for fname in *.jp*g
    do
        RNG=$(echo $RANDOM | shasum | head -c 8)
        mv "$fname" "$RNG".jpg
    done
    sips -z 1600 2560 *.jpg > /dev/null
    /Applications/ImageOptim.app/Contents/MacOS/ImageOptim *.jpg &> /dev/null
else
    echo "Please navigate to a Wallpapers directory"
fi